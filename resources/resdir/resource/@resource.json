{
  "@import": ["./", "js/resource"],
  "id": "resdir/resource",
  "version": "0.1.22",
  "isPublic": true,
  "files": ["./dist"],
  "dependencies": {
    "@import": "js/npm-dependencies",
    "@value": {
      "@resdir/console": "^0.1.0",
      "@resdir/gitignore-manager": "^0.1.0",
      "@resdir/registry-client": "^0.1.13",
      "@resdir/resource-identifier": "^0.1.0",
      "@resdir/version": "^0.1.0"
    }
  },
  "@unpublishable": {
    "transpiler": {
      "@import": "1place/esnext-transpiler"
    },
    "tests": {
      "@import": "1place/esnext-jest",
      "@directory": "./tests",
      "dependencies": {
        "run-core": "^0.10.0"
      }
    }
  },
  "@export": {
    "@runtime": "node#>=6.10.0",
    "@implementation": "./dist",
    "id": {
      "@type": "string",
      "@description": "Identifier of the resource",
      "@example": "aturing/nice-tool",
      "@implementation": "./dist/id-property.js",
      "getNamespace": {
        "@type": "method"
      },
      "getName": {
        "@type": "method"
      },
      "validate": {
        "@type": "method",
        "@input": {
          "throwIfInvalid": true
        }
      }
    },
    "version": {
      "@type": "string",
      "@description": "Version number",
      "@example": "1.0.0",
      "@implementation": "./dist/version-property.js",
      "validate": {
        "@type": "method",
        "@input": {
          "throwIfInvalid": true
        }
      },
      "bump": {
        "@type": "method",
        "@input": {
          "major": false,
          "minor": false,
          "patch": false
        }
      }
    },
    "isPublic": {
      "@value": false,
      "@description": "Whether or not the resource is publicly available"
    },
    "name": {
      "@type": "string",
      "@description": "Name of the resource",
      "@example": "Nice Tool"
    },
    "description": {
      "@type": "string",
      "@description": "Short description",
      "@example": "A tool that is nice to you"
    },
    "keywords": {
      "@type": "array",
      "@description": "A list of keywords",
      "@example": ["nice", "cli", "tool"]
    },
    "homepage": {
      "@type": "string",
      "@description": "URL of the homepage"
    },
    "repository": {
      "@type": "string",
      "@description": "URL of the repository",
      "@example": "https://github.com/aturing/nice-tool.git"
    },
    "files": {
      "@type": "array",
      "@description": "List of files and directories to include when publishing",
      "@example": ["./dist"]
    },
    "publish": {
      "@type": "method",
      "@description": "Publish the resource to Resdir",
      "@input": {
        "major": false,
        "minor": false,
        "patch": false
      }
    },
    "initialize": {
      "@type": "method",
      "@input": {
        "id": {
          "@type": "string",
          "@position": 0
        },
        "version": {
          "@type": "string",
          "@aliases": ["v"]
        },
        "gitignore": true
      },
      "@listen": "@created",
      "@hidden": true
    }
  }
}
