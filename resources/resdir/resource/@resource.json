{
  "@import": [
    "./",
    "js/resource"
  ],
  "id": "resdir/resource",
  "version": "0.1.25",
  "isPublic": true,
  "files": [
    "./dist"
  ],
  "dependencies": {
    "@import": "js/npm-dependencies",
    "@value": {
      "@resdir/console": "^0.1.0",
      "@resdir/gitignore-manager": "^0.1.0",
      "@resdir/registry-client": "^0.1.13",
      "@resdir/resource-identifier": "^0.1.0",
      "@resdir/version": "^0.1.0"
    }
  },
  "@unpublishable": {
    "transpiler": {
      "@import": "1place/esnext-transpiler"
    },
    "tests": {
      "@import": "1place/esnext-jest",
      "@directory": "./tests",
      "dependencies": {
        "run-core": "^0.10.0"
      }
    }
  },
  "@export": {
    "@runtime": "node#>=6.10.0",
    "@implementation": "./dist",
    "id": {
      "@type": "string",
      "@description": "Identifier of the resource",
      "@examples": [
        "js/example",
        "aturing/nice-tool"
      ],
      "@implementation": "./dist/id-property.js",
      "getNamespace": {
        "@type": "method",
        "@description": "Get the namespace part of the identifier"
      },
      "getName": {
        "@type": "method",
        "@description": "Get the name part of the identifier"
      },
      "validate": {
        "@type": "method",
        "@description": "Validate the identifier",
        "@input": {
          "throwIfInvalid": true
        }
      }
    },
    "version": {
      "@type": "string",
      "@description": "Version number",
      "@aliases": [
        "ver",
        "v"
      ],
      "@examples": [
        "1.0.0",
        "0.23.4",
        "2.0.0-alpha.3"
      ],
      "@implementation": "./dist/version-property.js",
      "validate": {
        "@type": "method",
        "@description": "Validate the version number",
        "@input": {
          "throwIfInvalid": true
        }
      },
      "bump": {
        "@type": "method",
        "@description": "Bump the version number",
        "@examples": [
          "version bump --patch"
        ],
        "@input": {
          "major": {
            "@type": "boolean",
            "@description": "Bump major version"
          },
          "minor": {
            "@type": "boolean",
            "@description": "Bump minor version"
          },
          "patch": {
            "@type": "boolean",
            "@description": "Bump patch version"
          }
        }
      }
    },
    "isPublic": {
      "@description": "Whether or not the resource is publicly available",
      "@aliases": [
        "public"
      ],
      "@value": false
    },
    "name": {
      "@type": "string",
      "@description": "Name of the resource",
      "@examples": [
        "React"
      ]
    },
    "description": {
      "@type": "string",
      "@description": "Short description",
      "@aliases": [
        "desc"
      ],
      "@examples": [
        "A tool that is nice to you"
      ]
    },
    "keywords": {
      "@type": "array",
      "@description": "A list of keywords",
      "@examples": [
        [
          "nice",
          "cli-tool"
        ]
      ]
    },
    "homepage": {
      "@type": "string",
      "@description": "URL of the homepage",
      "@examples": [
        "https://www.aturing.com/nice-tool"
      ]
    },
    "repository": {
      "@type": "string",
      "@description": "URL of the repository",
      "@aliases": [
        "repo"
      ],
      "@examples": [
        "https://github.com/aturing/nice-tool.git"
      ]
    },
    "files": {
      "@type": "array",
      "@description": "List of files and directories to include when publishing",
      "@examples": [
        [
          "./dist"
        ]
      ]
    },
    "publish": {
      "@type": "method",
      "@description": "Publish the resource to Resdir",
      "@examples": [
        "publish --patch"
      ],
      "@input": {
        "major": {
          "@type": "boolean",
          "@description": "Bump major version before publishing"
        },
        "minor": {
          "@type": "boolean",
          "@description": "Bump minor version before publishing"
        },
        "patch": {
          "@type": "boolean",
          "@description": "Bump patch version before publishing"
        }
      }
    },
    "initialize": {
      "@type": "method",
      "@hidden": true,
      "@input": {
        "id": {
          "@type": "string",
          "@position": 0
        },
        "version": {
          "@type": "string",
          "@aliases": [
            "v"
          ]
        },
        "gitignore": true
      },
      "@listen": "@created"
    }
  }
}
