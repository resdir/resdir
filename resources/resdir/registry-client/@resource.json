{
  "@import": [
    "resdir/resource",
    "js/resource"
  ],
  "id": "resdir/registry-client",
  "version": "0.1.24",
  "isPublic": true,
  "authors": [
    "Manuel Vila <hi@mvila.me>"
  ],
  "license": "MIT",
  "repository": "https://github.com/resdir/resdir.git",
  "files": [
    "./dist"
  ],
  "dependencies": {
    "debug": "^3.1.0",
    "fs-extra": "^5.0.0",
    "hasha": "^3.0.0",
    "is-directory": "^0.3.1",
    "lodash": "^4.17.4",
    "opn": "^5.2.0",
    "recursive-readdir": "^2.2.1",
    "@resdir/archive-manager": "^0.1.4",
    "@resdir/console": "^0.1.0",
    "@resdir/error": "^0.1.0",
    "@resdir/expression": "^0.1.2",
    "@resdir/file-manager": "^0.1.4",
    "@resdir/http-client": "^0.2.8",
    "@resdir/information": "^0.1.5",
    "@resdir/resource-specifier": "^0.1.14",
    "@resdir/secret-generator": "^1.0.4"
  },
  "@unpublishable": {
    "transpiler": {
      "@import": "js/transpiler",
      "run": {
        "@listen": [
          "@build",
          "@fileModified"
        ]
      }
    }
  },
  "@export": {
    "@name": "Resdir Registry Client",
    "@description": "Resdir registry client to publish and manage your resources",
    "@examples": [
      "run @registry signUp",
      "run @registry my orgs ls",
      "run @registry orgs create"
    ],
    "@implementation": "./dist/cjs",
    "registryServer": {
      "@type": "string",
      "@isHidden": true
    },
    "uploadServer": {
      "@type": "object",
      "@isHidden": true
    },
    "ping": {
      "@type": "method",
      "@isHidden": true
    },
    "signUp": {
      "@type": "method",
      "@description": "Sign up for Resdir",
      "@input": {
        "email": {
          "@type": "string",
          "@description": "Your email address",
          "@position": 0,
          "@isOptional": true
        },
        "namespace": {
          "@type": "string",
          "@description": "Choose a name for your personal namespace",
          "@aliases": [
            "ns"
          ],
          "@position": 1,
          "@isOptional": true
        },
        "permissionToken": {
          "@type": "string",
          "@isOptional": true,
          "@isHidden": true
        }
      }
    },
    "signIn": {
      "@type": "method",
      "@description": "Sign in to Resdir",
      "@input": {
        "email": {
          "@type": "string",
          "@description": "Your email address",
          "@position": 0,
          "@isOptional": true
        }
      }
    },
    "signOut": {
      "@type": "method",
      "@description": "Sign out from Resdir"
    },
    "currentUser": {
      "@description": "It's all about you",
      "@aliases": [
        "me",
        "my"
      ],
      "@implementation": "./dist/cjs/current-user",
      "show": {
        "@type": "method",
        "@description": "Display some information about your Resdir account"
      },
      "delete": {
        "@type": "method",
        "@description": "Delete your Resdir account",
        "@isHidden": true
      },
      "organizations": {
        "@description": "Manage the organizations you belong to",
        "@aliases": [
          "organization",
          "orgs",
          "org"
        ],
        "@implementation": "./dist/cjs/current-user-organizations",
        "list": {
          "@type": "method",
          "@description": "List the organizations you belong to",
          "@aliases": [
            "ls"
          ]
        }
      },
      "namespace": {
        "@description": "Manage your personal namespace",
        "@aliases": [
          "ns"
        ],
        "@implementation": "./dist/cjs/current-user-namespace",
        "create": {
          "@type": "method",
          "@description": "Create a personal namespace (if you don't have one yet)",
          "@input": {
            "namespace": {
              "@type": "string",
              "@description": "Choose a name for your personal namespace",
              "@aliases": [
                "ns"
              ],
              "@position": 0,
              "@isOptional": true,
              "@examples": [
                "aturing",
                "sjobs",
                "torvalds"
              ]
            },
            "permissionToken": {
              "@type": "string",
              "@isOptional": true,
              "@isHidden": true
            }
          }
        },
        "delete": {
          "@type": "method",
          "@description": "Delete your personal namespace (useful if you want to create a new one)"
        }
      },
      "gitHub": {
        "@description": "Manage the connection to your GitHub account",
        "@aliases": [
          "github",
          "gh"
        ],
        "@implementation": "./dist/cjs/current-user-github-account",
        "connect": {
          "@type": "method",
          "@description": "Connect your Resdir account to your GitHub account",
          "@input": {
            "parentAction": {
              "@type": "string",
              "@isOptional": true,
              "@isHidden": true
            }
          }
        },
        "disconnect": {
          "@type": "method",
          "@description": "Disconnect your Resdir account from your GitHub account"
        }
      }
    },
    "users": {
      "@aliases": [
        "user"
      ],
      "@implementation": "./dist/cjs/users",
      "@isHidden": true
    },
    "organizations": {
      "@description": "Manage Resdir organizations",
      "@aliases": [
        "organization",
        "orgs",
        "org"
      ],
      "@implementation": "./dist/cjs/organizations",
      "create": {
        "@type": "method",
        "@description": "Create a new Resdir organization",
        "@input": {
          "namespace": {
            "@type": "string",
            "@description": "The namespace you wish for your organization",
            "@aliases": [
              "ns"
            ],
            "@position": 0,
            "@isOptional": true,
            "@examples": [
              "twitter",
              "js",
              "eff"
            ]
          },
          "permissionToken": {
            "@type": "string",
            "@isOptional": true,
            "@isHidden": true
          }
        }
      },
      "delete": {
        "@type": "method",
        "@description": "Delete an organization (you must be the owner)",
        "@input": {
          "namespace": {
            "@type": "string",
            "@description": "The namespace of the organization you want to delete",
            "@aliases": [
              "ns"
            ],
            "@position": 0,
            "@isOptional": true
          }
        }
      },
      "addMember": {
        "@type": "method",
        "@description": "Add a member to an organization",
        "@input": {
          "organizationNamespace": {
            "@type": "string",
            "@description": "The namespace of the organization",
            "@aliases": [
              "organization",
              "org"
            ],
            "@position": 0,
            "@isOptional": true
          },
          "userNamespace": {
            "@type": "string",
            "@description": "The namespace of the user",
            "@aliases": [
              "user"
            ],
            "@position": 1,
            "@isOptional": true
          }
        }
      },
      "removeMember": {
        "@type": "method",
        "@description": "Remove a member from an organization",
        "@input": {
          "organizationNamespace": {
            "@type": "string",
            "@description": "The namespace of the organization",
            "@aliases": [
              "organization",
              "org"
            ],
            "@position": 0,
            "@isOptional": true
          },
          "userNamespace": {
            "@type": "string",
            "@description": "The namespace of the user",
            "@aliases": [
              "user"
            ],
            "@position": 1,
            "@isOptional": true
          }
        }
      }
    },
    "resources": {
      "@aliases": [
        "resource",
        "res"
      ],
      "@implementation": "./dist/cjs/resources",
      "@isHidden": true,
      "get": {
        "@type": "method",
        "@input": {
          "specifier": {
            "@type": "string",
            "@position": 0
          },
          "throwIfNotFound": {
            "@default": true
          }
        },
        "@output": {
          "resource": {
            "@type": "object",
            "@isOptional": true
          }
        }
      },
      "fetch": {
        "@type": "method",
        "@input": {
          "specifier": {
            "@type": "string",
            "@position": 0
          }
        },
        "@output": {
          "file": {
            "@type": "string"
          },
          "cacheStatus": {
            "@type": "string"
          }
        }
      },
      "publish": {
        "@type": "method",
        "@input": {
          "file": {
            "@type": "string",
            "@position": 0
          },
          "permissionToken": {
            "@type": "string",
            "@isOptional": true
          }
        }
      }
    },
    "namespaces": {
      "@description": "Manage Resdir namespaces",
      "@aliases": [
        "namespace",
        "ns"
      ],
      "@implementation": "./dist/cjs/namespaces",
      "checkAvailability": {
        "@type": "method",
        "@description": "Check the availability of a namespace",
        "@aliases": [
          "check"
        ],
        "@input": {
          "namespace": {
            "@type": "string",
            "@description": "The namespace you want to check",
            "@aliases": [
              "ns"
            ],
            "@position": 0
          }
        }
      }
    },
    "admin": {
      "@implementation": "./dist/cjs/admin",
      "@isHidden": true,
      "invokeMethod": {
        "@type": "method",
        "@aliases": [
          "invoke"
        ],
        "@input": {
          "name": {
            "@type": "string",
            "@position": 0
          },
          "arguments": {
            "@type": "object",
            "@isOptional": true,
            "@isSubInput": true
          }
        }
      },
      "permissionTokens": {
        "@implementation": "./dist/cjs/admin-permission-tokens",
        "create": {
          "@type": "method",
          "@input": {
            "permission": {
              "@type": "string",
              "@position": 0
            },
            "parameters": {
              "@type": "object",
              "@isOptional": true,
              "@isSubInput": true
            }
          }
        }
      }
    }
  }
}
