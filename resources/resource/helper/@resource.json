{
  "@import": [
    "resdir/resource#^0.1.0",
    "1place/js-resource#^0.1.0"
  ],
  "id": "resource/helper",
  "version": "0.1.15",
  "isPublic": true,
  "authors": [
    "Manuel Vila <hi@mvila.me>"
  ],
  "license": "MIT",
  "repository": "https://github.com/resdir/resdir.git",
  "files": [
    "./dist"
  ],
  "dependencies": {
    "indent-string": "^3.2.0",
    "lodash": "^4.17.4",
    "@resdir/console": "^0.1.31",
    "@resdir/error": "^0.1.0",
    "@resdir/resource-specifier": "^0.1.10"
  },
  "@export": {
    "@name": "Resource Helper",
    "@description": "Implement built-in Resource's methods such as @create, @add, @help,...",
    "@implementation": "./dist/cjs",
    "create": {
      "@type": "method",
      "@input": {
        "typeOrSpecifier": {
          "@type": "string",
          "@position": 0
        }
      }
    },
    "add": {
      "@type": "method",
      "@input": {
        "resourcePtr": {
          "@type": "pointer",
          "@position": 0
        },
        "typeOrSpecifier": {
          "@type": "string",
          "@position": 1
        },
        "key": {
          "@type": "string",
          "@position": 2
        }
      }
    },
    "remove": {
      "@type": "method",
      "@input": {
        "resourcePtr": {
          "@type": "pointer",
          "@position": 0
        },
        "key": {
          "@type": "string",
          "@position": 1
        }
      }
    },
    "normalize": {
      "@type": "method",
      "@input": {
        "resourcePtr": {
          "@type": "pointer",
          "@position": 0
        },
        "format": {
          "@type": "string",
          "@default": "JSON"
        }
      }
    },
    "help": {
      "@type": "method",
      "@input": {
        "resourcePtr": {
          "@type": "pointer",
          "@position": 0
        },
        "keys": {
          "@type": "array",
          "@position": 1,
          "@isOptional": true,
          "@isVariadic": true
        },
        "showBuiltIn": {
          "@type": "boolean",
          "@isOptional": true
        }
      }
    }
  }
}
