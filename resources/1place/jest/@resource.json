{
  "@import": [
    "resdir/resource",
    "1place/js-resource"
  ],
  "id": "1place/jest",
  "version": "0.1.37",
  "isPublic": true,
  "files": [
    "./dist"
  ],
  "dependencies": {
    "jest": "^22.0.4",
    "@resdir/console": "^0.1.0",
    "@resdir/process-manager": "^0.1.0"
  },
  "@export": {
    "@import": "1place/js-resource",
    "@description": "Test suite runner (using Jest)",
    "@implementation": "./dist/cjs",
    "roots": {
      "@type": "array",
      "@description": "Root diectories containing the test files",
      "@default": [
        "./dist/cjs"
      ]
    },
    "testEnvironment": {
      "@type": "string",
      "@description": "The test environment that will be used for testing",
      "@examples": [
        "jsdom",
        "node"
      ],
      "@default": "node"
    },
    "run": {
      "@type": "method",
      "@description": "Run the test suite",
      "@examples": [
        "run",
        "run core"
      ],
      "@input": {
        "testPathPattern": {
          "@type": "string",
          "@description": "A regexp pattern that is matched against tests paths",
          "@position": 0,
          "@isOptional": true
        }
      },
      "@listen": "@test"
    }
  }
}
