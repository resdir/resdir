{
  "@import": [
    "resdir/resource",
    "js/resource"
  ],
  "id": "1place/jest",
  "version": "0.1.31",
  "isPublic": true,
  "files": [
    "./dist"
  ],
  "dependencies": {
    "@import": "js/npm-dependencies",
    "@value": {
      "jest": "^22.0.4",
      "regenerator-runtime": "^0.11.1",
      "@resdir/console": "^0.1.0",
      "@resdir/process-manager": "^0.1.0"
    }
  },
  "@unpublishable": {
    "transpiler": {
      "@import": "1place/esnext-transpiler"
    }
  },
  "@export": {
    "@description": "Test suite runner (using Jest)",
    "@implementation": "./dist",
    "dependencies": {
      "@import": "js/npm-dependencies"
    },
    "roots": {
      "@type": "array",
      "@description": "Root diectories containing the test files"
    },
    "testEnvironment": {
      "@type": "string",
      "@description": "The test environment that will be used for testing",
      "@examples": [
        "jsdom",
        "node"
      ],
      "@default": "jsdom"
    },
    "run": {
      "@type": "method",
      "@description": "Run the test suite",
      "@examples": [
        "run",
        "run core"
      ],
      "@input": {
        "testPathPattern": {
          "@type": "string",
          "@description": "A regexp pattern that is matched against tests paths",
          "@position": 0,
          "@isOptional": true
        }
      },
      "@listen": "@test"
    }
  }
}
