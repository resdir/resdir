{
  "@import": [
    "resdir/resource",
    "1place/js-resource"
  ],
  "id": "tool/file-watcher",
  "version": "0.1.14",
  "isPublic": true,
  "files": [
    "./dist"
  ],
  "dependencies": {
    "minimatch": "^3.0.4"
  },
  "@export": {
    "@description": "Listens '@fileModified' event, and emits 'fileModified' when a file matches a list of globs",
    "@implementation": "./dist/cjs",
    "files": {
      "@type": "array",
      "@description": "An array of globs specifying the files to watch",
      "@examples": [
        [
          "./src/**"
        ]
      ]
    },
    "_onFileModified": {
      "@type": "method",
      "@isHidden": true,
      "@input": {
        "file": {
          "@type": "string"
        }
      },
      "@listen": "@fileModified"
    }
  }
}
