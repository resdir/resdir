{
  "@import": [
    "resdir/resource",
    "1place/js-resource"
  ],
  "id": "tool/file-watcher",
  "version": "0.1.10",
  "isPublic": true,
  "files": [
    "./dist"
  ],
  "dependencies": {
    "minimatch": "^3.0.4"
  },
  "@export": {
    "@implementation": "./dist",
    "files": {
      "@type": "array"
    },
    "onFileModified": {
      "@type": "method",
      "@input": {
        "file": {
          "@type": "string"
        }
      }
    },
    "_handleFileModifiedEvent": {
      "@type": "method",
      "@isHidden": true,
      "@input": {
        "file": {
          "@type": "string"
        }
      },
      "@listen": "@fileModified"
    }
  }
}
