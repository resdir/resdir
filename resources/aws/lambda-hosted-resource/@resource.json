{
  "@import": [
    "resdir/resource",
    "1place/js-resource"
  ],
  "id": "aws/lambda-hosted-resource",
  "version": "0.1.29",
  "isPublic": true,
  "authors": [
    "Manuel Vila <hi@mvila.me>"
  ],
  "license": "MIT",
  "repository": "https://github.com/resdir/resdir.git",
  "files": [
    "./dist",
    "./lambda-handler/dist"
  ],
  "dependencies": {
    "fs-extra": "^5.0.0",
    "hasha": "^3.0.0",
    "koa": "^2.4.1",
    "@koa/cors": "^2.2.1",
    "koa-json-body": "^5.3.0",
    "koa-json-error": "^3.1.2",
    "lodash": "^4.17.4",
    "@resdir/archive-manager": "^0.1.4",
    "@resdir/aws-client": "^0.1.1",
    "@resdir/aws-helpers": "^0.1.0",
    "@resdir/console": "^0.1.16",
    "@resdir/error": "^0.1.0",
    "@resdir/file-manager": "^0.1.4",
    "@resdir/remote-resource-json-rpc-handler": "^0.1.0",
    "sleep-promise": "^2.0.0",
    "tempy": "^0.2.1"
  },
  "@export": {
    "@name": "AWS Lambda Hosted Resource",
    "@description": "Host resources on AWS using Lambda, API Gateway, Route 53 and ACM",
    "@implementation": "./dist/cjs",
    "domainName": {
      "@type": "string",
      "@description": "The domain name of your hosted resource",
      "@examples": [
        "api.mydomain.com"
      ]
    },
    "memorySize": {
      "@description": "The maximum amount of memory, in MB, allocated to your resource",
      "@default": 128
    },
    "timeout": {
      "@description": "The maximum execution time, in seconds, of the resource methods",
      "@default": 3
    },
    "environment": {
      "@type": "object",
      "@isHidden": true
    },
    "aws": {
      "@description": "Your AWS configuration",
      "accessKeyId": {
        "@type": "string",
        "@description": "Your AWS access key ID"
      },
      "secretAccessKey": {
        "@type": "string",
        "@description": "Your AWS secret access key"
      },
      "region": {
        "@description": "The AWS region in which your resource must be hosted",
        "@examples": [
          "us-west-1",
          "eu-west-3",
          "ap-northeast-1"
        ],
        "@default": "us-east-1"
      }
    },
    "deploy": {
      "@type": "method",
      "@description": "Deploy your resource to AWS",
      "@before": "@build"
    },
    "testServer": {
      "@description": "A simple HTTP server to help you test your resource locally",
      "@aliases": [
        "server"
      ],
      "@implementation": "./dist/cjs/test-server",
      "port": {
        "@description": "The TCP port the test server should use",
        "@default": 6789
      },
      "start": {
        "@type": "method",
        "@description": "Start the test server"
      }
    }
  }
}
