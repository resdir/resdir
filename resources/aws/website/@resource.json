{
  "@import": [
    "resdir/resource",
    "1place/js-resource"
  ],
  "id": "aws/website",
  "version": "0.1.32",
  "isPublic": true,
  "authors": [
    "Manuel Vila <hi@mvila.me>"
  ],
  "license": "MIT",
  "repository": "https://github.com/resdir/resdir.git",
  "files": [
    "./dist"
  ],
  "dependencies": {
    "bytes": "^3.0.0",
    "hasha": "^3.0.0",
    "http-errors": "^1.6.2",
    "is-directory": "^0.3.1",
    "koa": "^2.4.1",
    "koa-send": "^4.1.2",
    "lodash": "^4.17.4",
    "mime-types": "^2.1.17",
    "minimatch": "^3.0.4",
    "recursive-readdir": "^2.2.1",
    "@resdir/aws-client": "^0.1.1",
    "@resdir/aws-helpers": "^0.1.0",
    "@resdir/console": "^0.1.16",
    "@resdir/error": "^0.1.0",
    "sleep-promise": "^2.0.0"
  },
  "@export": {
    "@name": "AWS Website",
    "@description": "Host a static website on AWS (using S3, CloudFront, Route 53 and ACM)",
    "@implementation": "./dist/cjs",
    "domainName": {
      "@type": "string",
      "@description": "The domain name of your website",
      "@examples": [
        "www.mywebsite.com",
        "awesome.com"
      ]
    },
    "contentDirectory": {
      "@description": "The directory containing the content of your website",
      "@default": "./content"
    },
    "indexPage": {
      "@description": "The page returned at the root of your website (and subdirectories)",
      "@default": "index.html"
    },
    "customErrors": {
      "@type": "array",
      "@description": "Allows you to customize server errors",
      "@examples": [
        [
          {
            "errorCode": 404,
            "responseCode": 200,
            "responsePage": "index.html"
          }
        ]
      ]
    },
    "immutableFiles": {
      "@description": "An array of globs allowing you to specify the files that should be cached indefinitely",
      "@default": [
        "**/*.immutable.*"
      ]
    },
    "aws": {
      "@description": "Your AWS configuration",
      "accessKeyId": {
        "@type": "string",
        "@description": "Your AWS access key ID"
      },
      "secretAccessKey": {
        "@type": "string",
        "@description": "Your AWS secret access key"
      },
      "region": {
        "@description": "The AWS region in which your website must be hosted",
        "@examples": [
          "us-west-1",
          "eu-west-3",
          "ap-northeast-1"
        ],
        "@default": "us-east-1"
      },
      "cloudFront": {
        "@description": "Amazon CloudFront configuration",
        "priceClass": {
          "@description": "The price class you want to use for Amazon CloudFront",
          "@examples": [
            "PriceClass_100",
            "PriceClass_200",
            "PriceClass_All"
          ],
          "@default": "PriceClass_All"
        }
      },
      "acm": {
        "@description": "AWS Certificate Manager configuration",
        "@isHidden": true,
        "region": {
          "@description": "The AWS region in which the certificate should be hosted (should always be 'us-east-1')",
          "@default": "us-east-1"
        }
      }
    },
    "deploy": {
      "@type": "method",
      "@description": "Deploy your website to AWS",
      "@before": "@build"
    },
    "testServer": {
      "@description": "A simple HTTP server to help you test your website locally",
      "@aliases": [
        "server"
      ],
      "@implementation": "./dist/cjs/test-server",
      "port": {
        "@description": "The TCP port the test server should use",
        "@default": 5678
      },
      "start": {
        "@type": "method",
        "@description": "Start the test server"
      }
    }
  }
}
