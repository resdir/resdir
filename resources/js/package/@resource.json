{
  "@type": "js/esnext-resource",
  "@name": "js/package",
  "@version": "0.1.3",
  "@files": ["./dist"],
  "dependencies": [
    "fs-extra@^4.0.0",
    "lodash@^4.17.4",
    "@resdir/console@^0.1.0",
    "@resdir/gitignore-manager@^0.1.0",
    "@resdir/package-manager@^0.1.0",
    "@resdir/version@^0.1.1"
  ],
  "tests": {
    "@type": "js/esnext-jest",
    "@directory": "./tests",
    "dependencies": [
      "fs-extra@^3.0.1",
      "@resdir/file-manager@^0.1.0",
      "run-core@^0.10.0",
      "temp-dir@^1.0.0"
    ],
    "testEnvironment": "node",
    "run": {
      "@listen": "after:@test"
    }
  },
  "@export": {
    "@runtime": "node@>=6.10.0",
    "@implementation": "./dist",
    "name": {
      "@type": "string"
    },
    "version": {
      "@type": "string",
      "@implementation": "./dist/version-property",
      "bump": {
        "@type": "method",
        "@parameters": {
          "major": false,
          "minor": false,
          "patch": false
        }
      }
    },
    "description": {
      "@type": "string"
    },
    "author": {
      "@type": "string"
    },
    "contributors": {
      "@type": "array"
    },
    "repository": {
      "@type": "string"
    },
    "license": {
      "@type": "string"
    },
    "files": {
      "@type": "array"
    },
    "main": {
      "@implementation": "./dist/main-property",
      "es5": {
        "@type": "string"
      },
      "es6": {
        "@type": "string"
      }
    },
    "bin": {
      "@type": "object"
    },
    "preferGlobal": {
      "@type": "boolean"
    },
    "dependencies": {
      "@type": "js/dependencies"
    },
    "publish": {
      "@type": "method",
      "@parameters": {
        "access": {
          "@type": "string"
        }
      }
    },
    "updatePackageFile": {
      "@type": "method",
      "@listen": ["after:@build", "after:@save"]
    },
    "_createJSPackage": {
      "@type": "method",
      "@hidden": true,
      "@parameters": {
        "name": {"@type": "string", "@position": 0}
      },
      "@listen": "after:@create"
    },
    "@parameters": {
      "verbose": false,
      "quiet": false,
      "debug": false
    }
  }
}
