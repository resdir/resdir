{
  "@type": "js/esnext-resource",
  "@name": "js/package",
  "@version": "0.1.1",
  "@files": ["./dist"],
  "dependencies": [
    "fs-extra@^4.0.0",
    "lodash@^4.17.4",
    "@resdir/package-manager@^0.1.0",
    "@resdir/version@^0.1.1",
    "run-common@^0.6.0"
  ],
  "tests": {
    "@type": "js/esnext-jest",
    "@directory": "./tests",
    "testEnvironment": "node",
    "dependencies": ["fs-extra@^3.0.1", "run-core@^0.10.0", "temp-dir@^1.0.0"]
  },
  "@export": {
    "@type": "js/resource",
    "@aliases": ["package", "pkg"],
    "@implementation": "./dist",
    "@options": {
      "verbose": false,
      "quiet": false,
      "debug": false
    },
    "name": {
      "@type": "string"
    },
    "version": {
      "@type": "string",
      "@implementation": "./dist/version-property",
      "bump": {
        "@type": "command",
        "@options": {
          "major": false,
          "minor": false,
          "patch": false
        }
      }
    },
    "description": {
      "@type": "string"
    },
    "author": {
      "@type": "string"
    },
    "contributors": {
      "@type": "array"
    },
    "repository": {
      "@type": "string"
    },
    "license": {
      "@type": "string"
    },
    "files": {
      "@type": "array"
    },
    "main": {
      "@implementation": "./dist/main-property",
      "es5": {
        "@type": "string"
      },
      "es6": {
        "@type": "string"
      }
    },
    "bin": {
      "@type": "object"
    },
    "preferGlobal": {
      "@type": "boolean"
    },
    "publish": {
      "@type": "command",
      "@option": {
        "access": {
          "@type": "string"
        }
      }
    },
    "updatePackageFile": {
      "@type": "command",
      "@listen": ["after:@build", "after:@save"]
    },
    "_createJSPackage": {
      "@type": "command",
      "@listen": "after:@create",
      "@hidden": true
    }
  }
}
