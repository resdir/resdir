{
  "@import": "resdir/resource",
  "id": "js/npm-dependencies",
  "version": "0.1.30",
  "isPublic": true,
  "files": ["bundle.js"],
  "@unpublishable": {
    "builder": {
      "@implementation": "./dist/builder.js",
      "run": {
        "@type": "method",
        "@run": ["transpiler run", "bundle"],
        "@listen": "@build"
      },
      "transpiler": {
        "@import": "1place/esnext-transpiler",
        "run": {
          "@unlisten": ["@build", "@fileModified"]
        }
      },
      "bundle": {
        "@type": "method"
      },
      "fileWatcher": {
        "@import": "tool/file-watcher",
        "files": ["./src/**"],
        "onFileModified": {
          "@run": "@parent run"
        }
      }
    },
    "tests": {
      "@import": "1place/esnext-jest",
      "@directory": "./tests",
      "dependencies": {
        "fs-extra": "^3.0.1",
        "@resdir/file-manager": "^0.1.0",
        "run-core": "^0.10.0",
        "temp-dir": "^1.0.0"
      }
    }
  },
  "@export": {
    "@type": "object",
    "@description": "npm package dependencies",
    "@example": {
      "fs-extra": "^4.0.2",
      "lodash": "^4.17.4"
    },
    "@aliases": ["dependencies", "dependency", "deps", "dep"],
    "@runtime": "node#>=6.10.0",
    "@implementation": "./bundle.js",
    "add": {
      "@type": "method",
      "@description": "Add a new dependency",
      "@input": {
        "specifier": {
          "@type": "string",
          "@position": 0
        },
        "production": {
          "@aliases": ["prod"],
          "@value": false
        },
        "development": {
          "@aliases": ["dev"],
          "@value": false
        },
        "peer": false,
        "optional": false
      }
    },
    "remove": {
      "@type": "method",
      "@description": "Remove an existing dependency",
      "@aliases": ["rm"],
      "@input": {
        "name": {
          "@type": "string",
          "@position": 0
        }
      }
    },
    "install": {
      "@type": "method",
      "@description": "Install all dependencies",
      "@listen": "@install"
    },
    "count": {
      "@type": "method",
      "@description": "Count the number of existing dependencies"
    },
    "includes": {
      "@type": "method",
      "@description": "Determine whether a certain dependency is included",
      "@input": {
        "name": {
          "@type": "string",
          "@position": 0
        }
      }
    },
    "list": {
      "@type": "method",
      "@description": "List existing dependencies",
      "@aliases": ["ls"]
    },
    "updatePackageFile": {
      "@type": "method",
      "@hidden": true
    }
  }
}
