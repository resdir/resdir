{
  "@import": "resdir/resource#^0.1.0",
  "id": "js/npm-dependencies",
  "version": "0.1.63",
  "isPublic": true,
  "authors": [
    "Manuel Vila <hi@mvila.me>"
  ],
  "license": "MIT",
  "repository": "https://github.com/resdir/resdir.git",
  "files": [
    "./dist",
    "node_modules"
  ],
  "reinstallDependenciesWhilePublishing": true,
  "@unpublishable": {
    "dependencies": {
      "@import": "js/npm-dependencies#^0.1.0",
      "@value": {
        "github-url-to-object": "^4.0.2",
        "lodash": "^4.17.4",
        "@resdir/console": "^0.1.0",
        "@resdir/error": "^0.1.0",
        "@resdir/file-manager": "^0.1.0",
        "@resdir/gitignore-manager": "^0.1.0",
        "@resdir/package-manager": "^0.1.32",
        "@resdir/version-range": "^0.1.0"
      }
    },
    "transpiler": {
      "@import": "js/transpiler#^0.1.0",
      "run": {
        "@listen": [
          "@build",
          "@fileModified"
        ]
      }
    },
    "tests": {
      "@import": "1place/jest#^0.1.0",
      "@directory": "./tests",
      "dependencies": {
        "fs-extra": "^7.0.0",
        "@resdir/file-manager": "^0.1.0",
        "run-core": "^0.11.0",
        "temp-dir": "^1.0.0"
      }
    }
  },
  "@export": {
    "@type": "object",
    "@name": "npm Dependencies",
    "@description": "Manage npm package dependencies",
    "@aliases": [
      "dependencies",
      "dependency",
      "deps",
      "dep"
    ],
    "@examples": [
      {
        "fs-extra": "^6.0.1",
        "lodash": "^4.17.4"
      }
    ],
    "@runtime": "node#>=6.10.0",
    "@implementation": "./dist/cjs",
    "add": {
      "@type": "method",
      "@description": "Add a new dependency",
      "@examples": [
        "dependencies add fs-extra",
        "deps add lodash@^4",
        "deps add lodash@4.17.4",
        "deps add moment react"
      ],
      "@input": {
        "specifiers": {
          "@type": "array",
          "@description": "npm package specifiers",
          "@position": 0,
          "@isVariadic": true,
          "@examples": [
            "fs-extra",
            "lodash@^4",
            "lodash@4.17.4",
            "moment react"
          ]
        },
        "production": {
          "@type": "boolean",
          "@aliases": [
            "prod"
          ],
          "@isOptional": true,
          "@isHidden": true
        },
        "development": {
          "@type": "boolean",
          "@aliases": [
            "dev"
          ],
          "@isOptional": true,
          "@isHidden": true
        },
        "peer": {
          "@type": "boolean",
          "@isOptional": true,
          "@isHidden": true
        },
        "optional": {
          "@type": "boolean",
          "@isOptional": true,
          "@isHidden": true
        },
        "optimizeDiskSpace": {
          "@type": "boolean",
          "@description": "Use pnpm instead of npm to optimize disk space",
          "@default": true
        }
      }
    },
    "remove": {
      "@type": "method",
      "@description": "Remove an existing dependency",
      "@aliases": [
        "rm"
      ],
      "@input": {
        "names": {
          "@type": "array",
          "@description": "Name of the npm packages to remove",
          "@position": 0,
          "@isVariadic": true
        },
        "optimizeDiskSpace": {
          "@type": "boolean",
          "@description": "Use pnpm instead of npm to optimize disk space",
          "@default": true
        }
      }
    },
    "list": {
      "@type": "method",
      "@description": "List existing dependencies",
      "@aliases": [
        "ls"
      ]
    },
    "install": {
      "@type": "method",
      "@description": "Install all dependencies",
      "@input": {
        "optimizeDiskSpace": {
          "@type": "boolean",
          "@description": "Use pnpm instead of npm to optimize disk space",
          "@default": true
        }
      },
      "@listen": "@install"
    },
    "update": {
      "@type": "method",
      "@description": "Update dependencies to their latest semantically compatible version",
      "@input": {
        "optimizeDiskSpace": {
          "@type": "boolean",
          "@description": "Use pnpm instead of npm to optimize disk space",
          "@default": true
        }
      }
    },
    "upgrade": {
      "@type": "method",
      "@description": "Interactively upgrade dependencies to their latest version",
      "@input": {
        "names": {
          "@type": "array",
          "@description": "If specified, select the packages to upgrade, otherwise all packages are upgraded",
          "@position": 0,
          "@isOptional": true,
          "@isVariadic": true
        },
        "optimizeDiskSpace": {
          "@type": "boolean",
          "@description": "Use pnpm instead of npm to optimize disk space",
          "@default": true
        }
      }
    },
    "count": {
      "@type": "method",
      "@description": "Count the number of existing dependencies",
      "@output": {
        "@type": "number"
      }
    },
    "includes": {
      "@type": "method",
      "@description": "Determine whether a certain dependency is present",
      "@input": {
        "name": {
          "@type": "string",
          "@position": 0
        }
      },
      "@output": {
        "@type": "boolean"
      }
    },
    "updatePackageFile": {
      "@type": "method",
      "@isHidden": true
    },
    "onCreated": {
      "@type": "method",
      "@isHidden": true,
      "@input": {
        "generateGitignore": {
          "@default": true
        }
      },
      "@listen": "@created"
    }
  }
}
