{
  "@import": "js/resource#^0.1.0",
  "dependencies": {
    "sleep-promise": "^2.0.0"
  },
  "bundler": {
    "@import": "..",
    "entry": "./src/index.js",
    "output": "./dist/bundle.js",
    "targets": {
      "node": "6.10"
    },
    "transpile": true,
    "format": "cjs",
    "minify": false,
    "generateInlineSourceMaps": true,
    "fileWatcher": {
      "@import": "tool/file-watcher#^0.1.0",
      "files": [
        "./src/**"
      ],
      "onFileModified": {
        "@type": "method",
        "@run": "@parent run",
        "@listen": "fileModified"
      }
    }
  }
}
