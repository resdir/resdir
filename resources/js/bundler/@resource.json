{
  "@import": [
    "resdir/resource",
    "1place/js-resource"
  ],
  "id": "js/bundler",
  "version": "0.1.26",
  "isPublic": true,
  "files": [
    "./dist"
  ],
  "dependencies": {
    "bytes": "^3.0.0",
    "fs-extra": "^5.0.0",
    "@resdir/console": "^0.1.0",
    "@resdir/error": "^0.1.0",
    "@resdir/gitignore-manager": "^0.1.3",
    "rollup": "^0.55.1",
    "rollup-plugin-commonjs": "^8.2.6",
    "rollup-plugin-json": "^2.3.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.1.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-uglify": "^3.0.0",
    "uglify-es": "^3.3.7"
  },
  "@export": {
    "@description": "JavaScript module bundler (using Rollup)",
    "@runtime": "node#>=6.10.0",
    "@implementation": "./dist/cjs",
    "entry": {
      "@default": "./src/index.js",
      "@description": "The bundle's entry point"
    },
    "output": {
      "@default": "./dist/bundle.js",
      "@description": "The file to write to"
    },
    "target": {
      "@default": "node",
      "@description": "The target of your bundle: 'node', 'browser' or 'aws-lambda'"
    },
    "format": {
      "@default": "cjs",
      "@description": "The format of the generated bundle: 'cjs', 'esm' or 'iife'"
    },
    "name": {
      "@type": "string",
      "@description": "The variable name representing your bundle (for 'iife' format)"
    },
    "external": {
      "@type": "array",
      "@description": "An array of module IDs that should remain external to the bundle",
      "@examples": [
        ["react", "react-dom"]
      ]
    },
    "globals": {
      "@type": "object",
      "@description": "Object of id/name pairs, used for 'iife' bundles",
      "@examples": [
        {
          "react": "React",
          "react-dom": "ReactDOM"
        }
      ]
    },
    "replacements": {
      "@type": "object",
      "@description": "Object of key/value pairs, specifying content replacements",
      "@examples": [
        {
          "process.env.NODE_ENV": "\"production\""
        }
      ]
    },
    "reinstallDependencies": {
      "@default": false,
      "@description": "Reinstall npm dependencies before bundling (helps deduping symlinked deps)"
    },
    "minify": {
      "@default": false,
      "@description": "Minify the generated bundle (using 'uglify-es')"
    },
    "run": {
      "@type": "method",
      "@description": "Run the bundler"
    },
    "onCreated": {
      "@type": "method",
      "@isHidden": true,
      "@input": {
        "generateGitignore": {
          "@default": true
        }
      },
      "@listen": "@created"
    }
  }
}
