{
  "@import": [
    "resdir/resource",
    "1place/js-resource"
  ],
  "id": "js/bundler",
  "version": "0.1.24",
  "isPublic": true,
  "files": [
    "./dist"
  ],
  "dependencies": {
    "bytes": "^3.0.0",
    "fs-extra": "^5.0.0",
    "@resdir/console": "^0.1.0",
    "@resdir/gitignore-manager": "^0.1.3",
    "rollup": "^0.55.1",
    "rollup-plugin-commonjs": "^8.2.6",
    "rollup-plugin-json": "^2.3.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.1.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-uglify": "^3.0.0",
    "uglify-es": "^3.3.7"
  },
  "@export": {
    "@description": "JavaScript module bundler (using Rollup)",
    "@runtime": "node#>=6.10.0",
    "@implementation": "./dist/cjs",
    "entry": {
      "@default": "./src/index.js"
    },
    "output": {
      "@default": "./dist/bundle.js"
    },
    "target": {
      "@default": "node"
    },
    "format": {
      "@default": "cjs"
    },
    "name": {
      "@type": "string"
    },
    "external": {
      "@type": "array"
    },
    "globals": {
      "@type": "object"
    },
    "replacements": {
      "@type": "object"
    },
    "reinstallDependencies": {
      "@default": false
    },
    "minify": {
      "@default": false
    },
    "run": {
      "@type": "method"
    },
    "onCreated": {
      "@type": "method",
      "@isHidden": true,
      "@input": {
        "generateGitignore": {
          "@default": true
        }
      },
      "@listen": "@created"
    }
  }
}
