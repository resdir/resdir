{
  "scripts": {
    "build": "rm -rf dist && babel src --out-dir dist"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": 8
          },
          "loose": true,
          "exclude": ["transform-regenerator"]
        }
      ]
    ],
    "plugins": ["transform-class-properties", "transform-object-rest-spread"],
    "sourceMaps": "inline"
  }
}
