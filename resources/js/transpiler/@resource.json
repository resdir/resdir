{
  "@name": "js/transpiler",
  "@version": "0.1.0",
  "@files": ["./dist"],
  "dependencies": {
    "@type": "js/dependencies",
    "@value": [
      {
        "name": "babel-cli",
        "version": "^6.24.1",
        "type": "development"
      },
      "babel-core@^6.25.0",
      "babel-plugin-transform-class-properties@^6.24.1",
      "babel-plugin-transform-object-rest-spread@^6.23.0",
      "babel-preset-env@^1.5.2",
      "fs-extra@^3.0.1",
      "is-directory@^0.3.1",
      "lodash@^4.17.4",
      "run-common@^0.6.0"
    ]
  },
  "_testJSTranspiler": {
    "@type": "macro",
    "@expression": "./tests run",
    "@listen": "after:@test",
    "@hidden": true
  },
  "@export": {
    "@aliases": ["transpiler", "babel"],
    "@runtime": "node@>=6.10.0",
    "@implementation": "./dist",
    "source": "./src",
    "destination": "./dist",
    "extensions": [".js", ".jsx", ".es6", ".es"],
    "transpile": {
      "@alias": "run",
      "@type": "command",
      "@parameter": {
        "@name": "files",
        "@type": "string"
      },
      "@variadic": true,
      "@listen": "after:@build"
    },
    "_afterFileModified": {
      "@type": "macro",
      "@parameter": {
        "@name": "file",
        "@type": "string"
      },
      "@expression": "transpile ${@arguments[0]} --quiet",
      "@listen": "after:@fileModified",
      "@hidden": true
    },
    "@options": {
      "verbose": false,
      "quiet": false,
      "debug": false
    }
  }
}
