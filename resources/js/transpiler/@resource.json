{
  "@import": [
    "resdir/resource#^0.1.0",
    "1place/js-resource#^0.1.0"
  ],
  "id": "js/transpiler",
  "version": "0.1.21",
  "isPublic": true,
  "authors": [
    "Manuel Vila <hi@mvila.me>"
  ],
  "license": "MIT",
  "repository": "https://github.com/resdir/resdir.git",
  "files": [
    "./dist"
  ],
  "dependencies": {
    "@babel/core": "^7.0.0-beta",
    "babel-plugin-lodash": "^3.3.2",
    "@babel/plugin-proposal-class-properties": "^7.0.0-beta",
    "@babel/plugin-proposal-decorators": "^7.0.0-beta",
    "@babel/plugin-proposal-optional-chaining": "^7.0.0-rc.1",
    "@babel/plugin-transform-classes": "^7.0.0-beta",
    "@babel/preset-env": "^7.0.0-beta",
    "@babel/preset-react": "^7.0.0-beta",
    "fs-extra": "^6.0.1",
    "is-directory": "^0.3.1",
    "lodash": "^4.17.4",
    "@resdir/console": "^0.1.0",
    "@resdir/error": "^0.1.0",
    "@resdir/gitignore-manager": "^0.1.1"
  },
  "@unpublishable": {
    "tests": {
      "@import": "1place/jest#^0.1.0",
      "@directory": "./tests",
      "dependencies": {
        "fs-extra": "^6.0.1",
        "@resdir/file-manager": "^0.1.0",
        "run-core": "^0.11.0",
        "temp-dir": "^1.0.0"
      }
    }
  },
  "@export": {
    "@name": "JavaScript Transpiler",
    "@description": "JavaScript transpiler (using Babel)",
    "@runtime": "node#>=6.10.0",
    "@implementation": "./dist/cjs",
    "source": {
      "@description": "Source file or directory",
      "@default": "./src"
    },
    "destination": {
      "@description": "Destination file or directory",
      "@default": "./dist/${format}"
    },
    "extensions": {
      "@description": "Extensions of files that should be transpiled (other files are simply copied)",
      "@default": [
        ".js",
        ".mjs",
        ".jsx"
      ]
    },
    "targets": {
      "@description": "Expected targets of the transpiled files (uses @babel/preset-env)",
      "@default": {
        "node": "6.10"
      }
    },
    "format": {
      "@description": "Module format ('cjs' or 'esm') to use for the transpiled files",
      "@examples": [
        "cjs",
        "esm"
      ],
      "@default": "cjs"
    },
    "transformClasses": {
      "@description": "Transform ES6 classes to ES5",
      "@isHidden": true,
      "@default": false
    },
    "transformJSX": {
      "@description": "Enable JSX support (using @babel/preset-react)",
      "@default": false
    },
    "jsxPragma": {
      "@type": "string",
      "@isHidden": true
    },
    "generateInlineSourceMaps": {
      "@description": "Generate inline sourcemaps",
      "@default": false
    },
    "run": {
      "@type": "method",
      "@description": "Run the transpiler",
      "@input": {
        "files": {
          "@type": "array",
          "@description": "When specified, selects the files to be transpiled",
          "@aliases": [
            "file"
          ],
          "@position": 0,
          "@isOptional": true,
          "@isVariadic": true
        }
      }
    },
    "onCreated": {
      "@type": "method",
      "@isHidden": true,
      "@input": {
        "generateGitignore": {
          "@default": true
        }
      },
      "@listen": "@created"
    }
  }
}
