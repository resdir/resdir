{
  "@import": [
    "resdir/resource",
    "1place/js-resource"
  ],
  "id": "js/transpiler",
  "version": "0.1.10",
  "isPublic": true,
  "files": [
    "./dist"
  ],
  "dependencies": {
    "@babel/core": "^7.0.0-beta.36",
    "babel-plugin-lodash": "^3.3.2",
    "@babel/plugin-proposal-decorators": "^7.0.0-beta.38",
    "@babel/preset-env": "^7.0.0-beta.36",
    "@babel/preset-react": "^7.0.0-beta.36",
    "@babel/preset-stage-3": "^7.0.0-beta.36",
    "fs-extra": "^5.0.0",
    "is-directory": "^0.3.1",
    "lodash": "^4.17.4",
    "@resdir/console": "^0.1.0",
    "@resdir/error": "^0.1.0",
    "@resdir/gitignore-manager": "^0.1.1"
  },
  "@unpublishable": {
    "tests": {
      "@import": "1place/jest",
      "@directory": "./tests",
      "dependencies": {
        "fs-extra": "^5.0.0",
        "@resdir/file-manager": "^0.1.0",
        "run-core": "^0.11.0",
        "temp-dir": "^1.0.0"
      }
    }
  },
  "@export": {
    "@description": "JavaScript transpiler (using Babel)",
    "@runtime": "node#>=6.10.0",
    "@implementation": "./dist/cjs",
    "source": {
      "@default": "./src",
      "@description": "Source directory of the files to be transpiled"
    },
    "destination": {
      "@default": "./dist/${format}",
      "@description": "Destination directory of the transpiled files"
    },
    "extensions": {
      "@default": [
        ".js",
        ".mjs",
        ".jsx"
      ],
      "@description": "Extensions of files that should be transpiled (other files are simply copied)"
    },
    "targets": {
      "@default": {
        "node": "6.10",
        "chrome": "50",
        "safari": "10",
        "firefox": "53",
        "edge": "14"
      },
      "@description": "Expected targets of the transpiled files (uses @babel/preset-env)"
    },
    "format": {
      "@default": "cjs",
      "@description": "Module format ('cjs' or 'esm') to use for the transpiled files",
      "@examples": [
        "cjs",
        "esm"
      ]
    },
    "transformJSX": {
      "@default": false,
      "@description": "Enable JSX support (using @babel/preset-react)"
    },
    "jsxPragma": {
      "@type": "string",
      "@isHidden": true
    },
    "run": {
      "@type": "method",
      "@description": "Run the transpiler",
      "@input": {
        "files": {
          "@type": "array",
          "@description": "When specified, selects the files to be transpiled",
          "@aliases": [
            "file"
          ],
          "@position": 0,
          "@isOptional": true,
          "@isVariadic": true
        }
      }
    },
    "onCreated": {
      "@type": "method",
      "@isHidden": true,
      "@input": {
        "generateGitignore": {
          "@default": true
        }
      },
      "@listen": "@created"
    }
  }
}
