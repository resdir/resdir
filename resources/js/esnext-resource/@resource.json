{
  "@name": "js/esnext-resource",
  "@version": "0.1.1",
  "@files": ["./dist"],
  "transpiler": {
    "@type": "js/transpiler",
    "targets": {
      "node": 8
    },
    "run": {
      "@listen": ["after:@build", "after:@fileModified"]
    }
  },
  "dependencies": {
    "@type": "js/dependencies",
    "@value": ["fs-extra@^4.0.0", "@resdir/gitignore-manager@^0.1.0"]
  },
  "@export": {
    "@type": "js/resource",
    "@implementation": "./dist",
    "transpiler": {
      "@type": "js/transpiler",
      "targets": {
        "node": 8
      },
      "run": {
        "@listen": ["after:@build", "after:@fileModified"]
      }
    },
    "_createJSESNextResource": {
      "@type": "command",
      "@hidden": true,
      "@parameter": {
        "name": {
          "@type": "string"
        }
      },
      "@listen": "after:@create"
    }
  }
}
