{
  "@import": [
    "resdir/resource#^0.1.0",
    "1place/js-resource#^0.1.0"
  ],
  "id": "js/npm-package",
  "version": "0.1.48",
  "isPublic": true,
  "authors": [
    "Manuel Vila <hi@mvila.me>"
  ],
  "license": "MIT",
  "repository": "https://github.com/resdir/resdir.git",
  "files": [
    "./dist"
  ],
  "dependencies": {
    "fs-extra": "^5.0.0",
    "lodash": "^4.17.4",
    "@resdir/console": "^0.1.0",
    "@resdir/error": "^0.1.0",
    "@resdir/gitignore-manager": "^0.1.0",
    "@resdir/package-manager": "^0.1.0",
    "@resdir/version": "^0.1.1"
  },
  "@unpublishable": {
    "tests": {
      "@import": "1place/jest#^0.1.0",
      "@directory": "./tests",
      "dependencies": {
        "fs-extra": "^5.0.0",
        "@resdir/file-manager": "^0.1.0",
        "run-core": "^0.11.0",
        "temp-dir": "^1.0.0"
      }
    }
  },
  "@export": {
    "@name": "npm Package",
    "@description": "Base resource to create and publish npm packages",
    "@runtime": "node#>=6.10.0",
    "@implementation": "./dist/cjs",
    "name": {
      "@type": "string",
      "@description": "The name of the package",
      "@examples": [
        "lodash",
        "react-dom",
        "@babel/core"
      ]
    },
    "version": {
      "@type": "string",
      "@description": "The version number of the package",
      "@examples": [
        "0.1.0",
        "1.12.5",
        "2.0.0-beta.1"
      ],
      "@implementation": "./dist/cjs/version-attribute",
      "bump": {
        "@type": "method",
        "@description": "Bump the version number",
        "@input": {
          "major": {
            "@type": "boolean",
            "@description": "Bump the major part of the version",
            "@isOptional": true
          },
          "minor": {
            "@type": "boolean",
            "@description": "Bump the minor part of the version",
            "@isOptional": true
          },
          "patch": {
            "@type": "boolean",
            "@description": "Bump the patch part of the version (default)",
            "@isOptional": true
          }
        }
      }
    },
    "description": {
      "@type": "string",
      "@description": "A short description",
      "@examples": [
        "Declarative routing for React"
      ]
    },
    "keywords": {
      "@type": "array",
      "@description": "A list of keywords",
      "@examples": [
        [
          "react",
          "generator",
          "cli-tool"
        ]
      ]
    },
    "author": {
      "@type": "string",
      "@description": "The author of the package",
      "@examples": [
        "Barney Rubble <b@rubble.com>",
        "alfred@awesome.fr",
        "Linus Torvalds"
      ]
    },
    "contributors": {
      "@type": "array",
      "@description": "A list of contributors"
    },
    "license": {
      "@type": "string",
      "@description": "The license attached to the package",
      "@examples": [
        "MIT",
        "Apache-2.0",
        "BSD-3-Clause"
      ]
    },
    "homepage": {
      "@type": "string",
      "@description": "The URL of the homepage",
      "@examples": [
        "https://www.aturing.com/nice-tool"
      ]
    },
    "repository": {
      "@type": "string",
      "@description": "The URL of the repository",
      "@examples": [
        "https://github.com/aturing/nice-tool.git"
      ]
    },
    "files": {
      "@type": "array",
      "@description": "List of files and directories to include when publishing",
      "@examples": [
        [
          "./dist",
          "./docs"
        ]
      ]
    },
    "main": {
      "@type": "string",
      "@description": "The entry point to your package",
      "@examples": [
        [
          "./dist/node/cjs/index.js",
          "./lib/main.js"
        ]
      ]
    },
    "module": {
      "@type": "string",
      "@isHidden": true
    },
    "browser": {
      "@type": "string",
      "@isHidden": true
    },
    "bin": {
      "@type": "object",
      "@description": "A map of command name to local file name",
      "@examples": [
        {
          "myapp": "./dist/cli.js"
        }
      ]
    },
    "dependencies": {
      "@import": "js/npm-dependencies#^0.1.0"
    },
    "isJSNPMPackageResource": {
      "@isHidden": true,
      "@value": true
    },
    "publish": {
      "@type": "method",
      "@description": "Publish your package to npm",
      "@examples": [
        "publish --patch"
      ],
      "@input": {
        "major": {
          "@type": "boolean",
          "@description": "Bump the major part of the version before publishing",
          "@isOptional": true
        },
        "minor": {
          "@type": "boolean",
          "@description": "Bump the minor part of the version before publishing",
          "@isOptional": true
        },
        "patch": {
          "@type": "boolean",
          "@description": "Bump the patch part of the version before publishing",
          "@isOptional": true
        },
        "access": {
          "@type": "string",
          "@description": "Specify whether your package should be published as 'public' or 'restricted'",
          "@isOptional": true
        }
      }
    },
    "updatePackageFile": {
      "@type": "method",
      "@isHidden": true,
      "@listen": [
        "@build",
        "@saved"
      ]
    },
    "onCreated": {
      "@type": "method",
      "@isHidden": true,
      "@input": {
        "name": {
          "@type": "string",
          "@position": 0,
          "@isOptional": true
        },
        "version": {
          "@type": "string",
          "@aliases": [
            "v"
          ],
          "@isOptional": true
        },
        "generateGitignore": {
          "@default": true
        }
      },
      "@listen": "@created"
    }
  }
}
